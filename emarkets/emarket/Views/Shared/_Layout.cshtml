<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - emarket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/emarket.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <div class="header-row">
            <div class="header-wrapper">
                <div class="header-mobile">
                    <i class="bi bi-list"></i>
                </div>
                <div class="header-left">
                    <a class="logolink" href="#">
                        <img class="logoimg" src="~/images/AybimasLogo-light.png" alt="" />
                    </a>
                </div>
                <div class="header-center">
                    <nav class="navigation">

                        <ul class="menu-list">
                            <li class="menu-item">
                                <a class="item-link active" href="@Url.Action("Index","Home")">Anasayfa</a>

                            </li>
                            <li class="menu-item">
                                <a class="item-link" href="@Url.Action("Kategoriler","Home")">Kategoriler</a>



                            </li>
                            <li class="menu-item">
                                <a class="item-link" href="@Url.Action("Kampanyalar","Home")">Kampanyalar</a>
                            </li>
                            <li class="menu-item">
                                <a class="item-link" href="@Url.Action("yfa","Home")">Destek</a>
                            </li>

                    </nav>
                </div>
                <div class="header-right">
                    <div class="header-right-buttons">

                        <div class="search">
                            <a class="search" href="#"><i class="bi bi-search"></i>
                        </div>

                        <a class="bag" href="#">
                            <i class="bi bi-cart4"></i>
                            <span class="header-cart-count">0</span>
                        </a>

                        <div>
                            <a class="header-account" href="#"><i class="bi bi-person"></i> </a>
                        </div>


                    </div>
                </div>
            </div>
        </div>
        </div>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - emarket - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
